<%- include('./partials/header.ejs') %>
<body class="min-h-screen bg-gray-50 text-gray-900">

  <main class="pt-20 pb-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="mb-6 flex items-center justify-between">
        <h1 class="text-2xl font-bold">Calendar</h1>
        <div class="inline-flex items-center gap-2">
          <button id="prevBtn" class="rounded-lg border px-3 py-1.5 hover:bg-gray-100">&larr; Prev</button>
          <div id="monthLabel" class="min-w-[10rem] text-center font-semibold"></div>
          <button id="nextBtn" class="rounded-lg border px-3 py-1.5 hover:bg-gray-100">Next &rarr;</button>
          <button id="todayBtn" class="ml-2 rounded-lg border px-3 py-1.5 hover:bg-gray-100">Today</button>
        </div>
      </div>

      <div class="bg-white rounded-2xl shadow overflow-hidden">
        <div class="grid grid-cols-7 text-xs font-semibold uppercase tracking-wide text-gray-500 border-b">
          <div class="p-3 text-center">Sun</div>
          <div class="p-3 text-center">Mon</div>
          <div class="p-3 text-center">Tue</div>
          <div class="p-3 text-center">Wed</div>
          <div class="p-3 text-center">Thu</div>
          <div class="p-3 text-center">Fri</div>
          <div class="p-3 text-center">Sat</div>
        </div>
        <div id="grid" class="grid grid-cols-7 auto-rows-[120px] sm:auto-rows-[140px]"></div>
      </div>
      <p class="mt-3 text-sm text-gray-500">Click a day to see events.</p>
    </div>
  </main>

  <%- include('./partials/footer.ejs') %>
</body>
</html>
