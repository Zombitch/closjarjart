<%- include('../partials/header.ejs') %>
<body class="bg-gray-50 min-h-screen md:p-4">
  <main class="flex-1 pb-10 flex items-center justify-center">
    <form enctype="multipart/form-data" action="/heart" method="post" class="w-full md:max-w-4xl bg-white rounded-2xl shadow p-6 min-h-[calc(100vh-4rem)] flex flex-col">
      <!-- Tab navigation -->
      <div class="flex border-b mb-4 overflow-y-auto">
        <a data-tab="price" class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-800">
          Prix
        </a>
        <a data-tab="info" class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-800">
          Info
        </a>
        <a data-tab="photos" class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-800">
          Photos
        </a>
        <a data-tab="reservations" class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-800">
          Reservations
        </a>
      </div>

      <!-- Tab panels (take all vertical space inside the card) -->
      <div class="flex-1 overflow-y-auto">
        <div id="tab-price" class="tab-panel">
          <div class="space-y-5">
            <%- include('../partials/heart/tarifs.ejs') %>
            <%- include('../partials/heart/extras.ejs') %>
          </div>
        </div>

        <div id="tab-info" class="tab-panel">
          <div class="space-y-5">
            <%- include('../partials/heart/info.ejs') %>
          </div>
        </div>

        <div id="tab-photos" class="tab-panel hidden">
          <h2 class="text-xl font-semibold text-gray-800 mb-3">Photos</h2>
          <%- include('../partials/heart/photos.ejs') %>
        </div>

        <div id="tab-reservations" class="tab-panel hidden">
          <h2 class="text-xl font-semibold text-gray-800 mb-3">Calendrier des réservations</h2>
          <div class="grid grid-cols-2 gap-2">
            <input type="hidden" id="dateStart" />
            <input id="dateStartISO" name="dateStart" type="hidden" />
            <input type="hidden" id="dateEnd" />
            <input id="dateEndISO" name="dateEnd" type="hidden" />
          </div>
          <div class="flex justify-center space-x-4 mb-6">
            <a id="addReservationBtn" class="text-sm px-2 py-2 rounded-lg text-white font-medium focus:ring-2 focus:ring-blue-400 focus:outline-none transition" >
              Ajouter
            </a>
            <a id="editReservationBtn" class="text-sm px-2 py-2 rounded-lg text-white font-medium focus:ring-2 focus:ring-gray-400 focus:outline-none transition">
              Modifier
            </a>
            <a id="deleteReservationBtn" class="text-sm px-2 py-2 rounded-lg text-white font-medium focus:ring-2 focus:ring-gray-400 focus:outline-none transition">
              Supprimer
            </a>
          </div>
          <div id="picker" class="z-50 bg-white border rounded-xl shadow-soft p-3 w-full select-none">
              <div class="flex items-center justify-between mb-2">
                <a id="prevBtn" class="px-2 py-1 rounded hover:bg-gray-100">◀</a>
                <div id="monthLabel" class="font-medium"></div>
                <a id="nextBtn" class="px-2 py-1 rounded hover:bg-gray-100">▶</a>
              </div>
              <div class="cal-grid text-xs font-medium text-gray-500 mb-1 text-center">
                <div>Lu</div><div>Ma</div><div>Me</div><div>Je</div><div>Ve</div><div>Sa</div><div>Di</div>
              </div>
              <div id="cal" class="cal-grid"></div>
              <div id="hint" class="mt-2 text-[11px] text-gray-500"></div>
            </div>
        </div>
      </div>
      <div class="mt-4 w-full text-center">
        <button type="submit" class="w-1/2 rounded-xl bg-cyan-600 text-white px-4 py-3 font-medium hover:bg-cyan-700 active:scale-[.99]">Enregistrer</button>
      </div>
    </form>
  </main>
  <%- include('../partials/footer.ejs') %>

  <!-- Modal (validate / edit) -->
  <div id="dashboardEditModal" class="fixed inset-0 bg-black/50 hidden items-center justify-center z-50">
    <div class="bg-white w-full max-w-md rounded-xl shadow-lg p-6">
      <h2 class="text-xl font-bold mb-4">Reservation Form</h2>
      <form id="reservationForm" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-gray-700">Name</label>
          <input type="text" name="name" required
            class="mt-1 w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700">Date</label>
          <input type="date" name="date" required
            class="mt-1 w-full border rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none">
        </div>
        <div class="flex justify-end space-x-2">
          <a id="dashboardEditModal" class="px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100">Fermer</a>
          <a class="px-4 py-2 rounded-lg bg-red-600 text-white hover:bg-red-700">Supprimer</a>
          <a id="dashboardEditModal" class="px-4 py-2 rounded-lg bg-cyan-600 text-white hover:bg-cyan-700">Enregistrer</a>
        </div>
      </form>
    </div>
  </div>
</body>

<script type="text/javascript">
  setConfig(JSON.parse('<%- blockedDate %>'), JSON.parse('<%- config.max_guests %>'))
</script>
<script type="text/javascript" src="/static/calendar_dashboard.js" defer></script>
</html>