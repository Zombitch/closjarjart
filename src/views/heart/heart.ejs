<%- include('../partials/header.ejs') %>
<body class="bg-gray-50 min-h-screen p-4">
  <main class="flex-1 p-6 pb-10 flex items-center justify-center">
    <form enctype="multipart/form-data" action="/heart" method="post" class="w-full max-w-4xl bg-white rounded-2xl shadow p-6 min-h-[calc(100vh-4rem)] flex flex-col">
      <!-- Tab navigation -->
      <div class="flex border-b mb-4 overflow-y-auto">
        <a data-tab="price"
                class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-800">
          Prix
        </a>
        <a data-tab="info"
                class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-800">
          Description & Info
        </a>
        <a data-tab="photos"
                class="tab-btn px-4 py-2 text-sm font-medium border-b-2 border-transparent text-gray-500 hover:text-gray-800">
          Photos
        </a>
      </div>

      <!-- Tab panels (take all vertical space inside the card) -->
      <div class="flex-1 overflow-y-auto">
        <div id="tab-price" class="tab-panel">
          <div class="space-y-5">
            <%- include('../partials/heart/tarifs.ejs') %>
            <%- include('../partials/heart/extras.ejs') %>
          </div>
        </div>

        <div id="tab-info" class="tab-panel">
          <div class="space-y-5">
            <%- include('../partials/heart/info.ejs') %>
          </div>
        </div>

        <div id="tab-photos" class="tab-panel hidden">
          <h2 class="text-xl font-semibold text-gray-800 mb-3">Photos</h2>
          <%- include('../partials/heart/photos.ejs') %>
        </div>
      </div>
      <div class="mt-4 w-full text-center">
        <button type="submit" class="w-1/2 rounded-xl bg-cyan-600 text-white px-4 py-3 font-medium hover:bg-cyan-700 active:scale-[.99]">Enregistrer</button>
      </div>
    </form>
  </main>
  <%- include('../partials/footer.ejs') %>
</body>
</html>